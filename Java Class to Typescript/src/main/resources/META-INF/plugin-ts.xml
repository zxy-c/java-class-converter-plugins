<idea-plugin>
    <actions>
        <action id="com.zxy.ijplugin.javaToTypescript.actions.ClassToTypescriptFileAtClipboardAction"
                class="com.zxy.ijplugin.javaToTypescript.actions.ClassToTypescriptFileAtClipboardAction"
                text="Generate Typescript File to Clipboard"
                description="Convert a class to Typescript file">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action id="com.zxy.ijplugin.javaToTypescript.actions.ClassToTypescriptInterfaceAtFileAction"
                class="com.zxy.ijplugin.javaToTypescript.actions.ClassToTypescriptInterfaceAtFileAction"
                text="Generate Typescript File"
                description="Convert a class to Typescript file">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>